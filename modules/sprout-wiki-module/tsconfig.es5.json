{
	"compilerOptions": {
		"baseUrl": ".",
		"declaration": true,
		"stripInternal": true,
		"target": "es5",
		"module": "umd",
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"strictNullChecks": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"noEmitHelpers": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"skipLibCheck": true,
		"paths": {
			"*": [
				"./node_modules/*"
			]
        },
		"lib": [
		    "es5",
		    "es2015",
		    "dom"
		],
		"rootDir": "./src/main/resources/",
		"outDir": "./build"
	},
	"files":["./src/main/resources/index.ts"],
    "compileOnSave": false,
	"buildOnSave": false,
	"exclude": [
    "./node_modules"
    ],
	"angularCompilerOptions": {
        "strictMetadataEmit": true,
		"skipTemplateCodegen": true,
		"debug": true
    }
}
