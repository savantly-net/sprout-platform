{
  "author": "Jeremy Branham <Jeremy@savantly.net>",
  "license": "Apache-2.0",
  "private": true,
  "name": "@savantly/sprout-workspace",
  "version": "0.0.3",
  "repository": "github:savantly/sprout-platform",
  "scripts": {
    "clean": "lerna run clean ",
    "clean:hard": "yarn clean && rm -rf ./packages/api/node_modules && rm -rf ./packages/runtime/node_modules && rm -rf ./packages/webapp/node_modules && rm -rf ./node_modules",
    "build": "yarn packages:build",
    "packages:build": "lerna run clean && lerna run build",
    "packages:prepare": "lerna version --no-push --no-git-tag-version --force-publish --exact",
    "packages:publish": "lerna publish from-package --contents dist",
    "packages:publishCanary": "lerna publish from-package --contents dist --dist-tag canary --yes",
    "packages:publishLatest": "lerna publish from-package --contents dist --yes",
    "packages:publishNext": "lerna publish from-package --contents dist --dist-tag next --yes",
    "packages:typecheck": "lerna run typecheck",
    "plugins:build-bundled": "sprout-toolkit plugin:bundle-managed",
    "plugins:create": "mkdir -p ./packages/plugins/example && cd ./packages/plugins/example && sprout-toolkit plugin:create",
    "postinstall": "lerna bootstrap",
    "prettier:check": "prettier --list-different \"**/*.{ts,tsx,scss}\"",
    "prettier:write": "prettier --list-different \"**/*.{ts,tsx,scss}\" --write",
    "start": "yarn start:dev",
    "start:dev": "cd ./packages/webapp && yarn start",
    "start:prod": "cd ./proxy && yarn start",
    "themes:generate": "npx ts-node --project ./scripts/cli/tsconfig.json ./scripts/cli/generateSassVariableFiles.ts",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^14.11.2",
    "eslint": "6.6.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-jsdoc": "28.6.1",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react-hooks": "4.0.5",
    "jest": "24.9.0",
    "lerna": "^3.20.2",
    "prettier": "1.19.1",
    "typescript": "3.9.3",
    "webpack": "4.42.0",
    "yarn": "1.18.0"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "plugins-bundled/internal/*"
    ],
    "nohoist": [
      "**/@types/*",
      "**/@types/*/**"
    ]
  },
  "engines": {
    "node": ">=12 <13"
  },
  "volta": {
    "node": "12.18.4"
  }
}
